    <style>
        
        body {
            background-color: #121212;
            font-family: 'Poppins', sans-serif;
            color: white;
        }
    
        
        .section-title {
            font-size: 1.8rem;
            font-weight: bold;
            margin: 20px;
            padding-left: 10px;
            border-left: 4px solid #009ffd;
        }
    
        
        .media-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 15px;
            padding: 20px;
        }
    
        
        .media-card {
            position: relative;
            background: #1c1c1c;
            border-radius: 10px;
            overflow: hidden;
            text-align: center;
            transition: transform 0.3s ease-in-out;
        }
    
        .media-card:hover {
            transform: scale(1.05);
        }
    
        .media-card img {
            width: 100%;
            height: 220px;
            object-fit: cover;
            border-radius: 10px;
        }
    
        
        .badge-featured {
            position: absolute;
            top: 8px;
            left: 8px;
            background: #00a300;
            color: white;
            font-size: 0.75rem;
            font-weight: bold;
            padding: 5px 8px;
            border-radius: 5px;
        }
    
        
        .media-title {
            font-size: 0.95rem;
            font-weight: 600;
            margin-top: 8px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            width: 100%;
            display: block;
        }
    
        .media-year {
            font-size: 0.8rem;
            color: #b0b0b0;
            margin-bottom: 8px;
        }
    
        
        @media (max-width: 768px) {
            .media-grid {
                grid-template-columns: repeat(3, 1fr);
            }
    
            .media-card img {
                height: 180px;
            }
        }
    
        @media (max-width: 480px) {
            .media-grid {
                grid-template-columns: repeat(2, 1fr);
            }
    
            .media-card img {
                height: 160px;
            }
        }

    </style>
    
